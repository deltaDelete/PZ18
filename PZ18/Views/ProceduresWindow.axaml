<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:PZ17.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PZ18.Views.ProceduresWindow"
        x:DataType="viewModels:ProceduresWindowViewModel"
        Title="ProceduresWindow">
    <DockPanel LastChildFill="True">
        <TextBox DockPanel.Dock="Top" Text="{Binding SearchQuery, Mode=TwoWay}"/>
        <DataGrid x:Name="DataGrid"
                  ItemsSource="{Binding Procedures}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ProcedureId}" Header="Код" />
                <DataGridTextColumn Binding="{Binding ProcedureName}" Header="Наименование"/>
                <DataGridTextColumn Binding="{Binding BasePrice}" Header="Базовая цена"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>